@model AML.Models.Cliente.Cliente

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<h2>Cadastro de cliente</h2>
<script src="~/js/Cliente/CadastroCliente.js"></script>
<hr />
<input type="hidden" value="@Url.Action("Create","Clientes")" id="hdnActionSalvar" />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <input type="hidden" asp-for="Id" value="0" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" id="Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group" style="width:150px">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="form-control" id="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group" style="width:150px">
                        <label asp-for="RG" class="control-label"></label>
                        <input asp-for="RG" class="form-control" id="RG" />
                        <span asp-validation-for="RG" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" id="Endereco" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" id="Complemento" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-5">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" id="Bairro" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="col-sm-5">
                        <label asp-for="CEP" class="control-label"></label>
                        <input asp-for="CEP" class="form-control" id="CEP" />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                    <div class="col-sm-5" style="margin-top:15px">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" id="Cidade" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group" style="width:500px" style="margin-top:15px">
                <label class="control-label">Telefone</label>
                <div class="row">
                    <div class="col-sm-5">
                        <input class="form-control" type="text" id="txtTelefone" style="width:200px">
                    </div>
                    <div class="col-sm-2">
                        <input id="btnAdicionarTelefone" type="button" class="btn-primary" value="Adicionar" />
                    </div>
                    <div class="col-sm-0" style="margin-left:15px;">
                        <table class="table" id="tblTelefone" style="display:none;width:500px">
                            <thead>
                                <tr>
                                    <th>
                                        Número
                                    </th>
                                    <th>
                                        Tipo
                                    </th>
                                    <th>
                                    </th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="form-group" style="width:500px; margin-top:15px;">

                <label class="control-label">E-mail</label>

                <div class="row">
                    <div class="col-sm-5">
                        <input class="form-control" type="text" id="txtEmail" style="width:200px">
                    </div>
                    <div class="col-sm-5">
                        <input id="btnAdicionarEmail" type="button" class="btn-primary" value="Adicionar" />
                    </div>
                </div>

                <table class="table" id="tblEmail" style="display:none;width:500px">
                    <thead>
                        <tr>
                            <th>
                                E-mail
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista de Clientes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
